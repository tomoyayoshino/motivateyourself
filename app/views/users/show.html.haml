.UserShow
  .Profile
    .Profile__image
      -if @image.present?
        = image_tag @image.url, size: '100x100'
    .Profile__name
      %p.userName="#{@name}"
    .Profile__text
      = @profile
    - if user_signed_in? && current_user.id == @user.id
      = link_to 'プロフィールを編集する', edit_user_registration_path(current_user)
    = render "follow_button"
  .UserShow__contents
    .UserShow__contents__header
      %h1#userPostButton.active 投稿一覧
      %h1#userFavoriteButton お気に入り一覧
    .UserShow__contents__timeline
      .UserPosts.Usertabs.show
        - @posts.each do |post|
          = image_tag post.user.image.url, size: '50x50', class: 'UserShow__contents__timeline--image'
          =link_to post.user.name, "/users/#{post.user.id}"
          .UserShow__contents__timeline__box
            %p.UserShow__contents__timeline__box--text= post.content
            - if post.image?
              = image_tag post.image.url, height: '200', class: 'UserShow__contents__timeline__box--image'
      .UserFavorites.Usertabs
        - @favorite_posts.each do |post|
          = image_tag post.user.image.url, size: '50x50', class: 'UserPosts__contents--image'
          =link_to post.user.name, "/users/#{post.user.id}"
          .UserShow__contents__timeline__box
            %p.UserShow__contents__timeline__box--text= post.content
            - if post.image?
              = image_tag post.image.url, height: '200', class: 'UserShow__contents__timeline__box--image'