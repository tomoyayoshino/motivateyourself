.UserShow
  .Profile
    .Profile__image
      -if @image.present?
        = image_tag @image.url, width: '100px'
    .Profile__name
      %p.userName="#{@name}さんの投稿一覧"
    - if user_signed_in? && current_user.id == @user.id
      = link_to 'プロフィールを編集する', edit_user_registration_path(@user.id)
  .Posts
    - @posts.each do |post|
      .Posts__contents
        %p.Posts__contents--text= post.content
        - if post.image?
          = image_tag post.image.url, height: '200', class: 'Posts__contents--image'
