.DeviseForms
  .DeviseForms__form
    %h2 Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :name
        %em (10文字以内で入力)
        %br/
        = f.text_field :name, autofocus: true, autocomplete: "name", class: "DeviseWidth"


      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "DeviseWidth"


      .field
      = f.label :image
      %em (プロフィール画像は必須です)
      %br/
      = f.file_field :image

      .field
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length}以上で入力)
        %br/
        = f.password_field :password, autocomplete: "new-password"
      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password"
      .actions
        = f.submit "Sign up"
    = render "devise/shared/links"
